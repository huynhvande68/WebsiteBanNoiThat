<!-- Thêm phần biểu đồ thống kê -->
<div class="row mt-4">
    <div class="col-12">
        <h3 class="text-center">Biểu đồ thống kê</h3>
    </div>
</div>

<div class="row mt-4">
    <!-- Biểu đồ doanh thu -->
    <div class="col-xl-4 col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Doanh thu theo tháng</h6>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" width="100%" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Biểu đồ khách hàng -->
    <div class="col-xl-4 col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thống kê khách hàng</h6>
            </div>
            <div class="card-body">
                <canvas id="customerChart" width="100%" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Biểu đồ sản phẩm -->
    <div class="col-xl-4 col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sản phẩm bán chạy</h6>
            </div>
            <div class="card-body">
                <canvas id="productChart" width="100%" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
// Dữ liệu mẫu cho biểu đồ doanh thu theo tháng
const revenueData = {
    labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
    datasets: [{
        label: 'Doanh thu (triệu VNĐ)',
        data: [12, 19, 15, 25, 22, 30, 28, 33, 29, 35, 37, 42],
        backgroundColor: 'rgba(54, 162, 235, 0.2)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1
    }]
};

// Dữ liệu mẫu cho biểu đồ khách hàng
const customerData = {
    labels: ['Khách hàng mới', 'Khách hàng cũ', 'Khách hàng VIP'],
    datasets: [{
        label: 'Số lượng khách hàng',
        data: [120, 190, 30],
        backgroundColor: [
            'rgba(255, 99, 132, 0.5)',
            'rgba(75, 192, 192, 0.5)',
            'rgba(255, 206, 86, 0.5)'
        ],
        borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(255, 206, 86, 1)'
        ],
        borderWidth: 1
    }]
};

// Dữ liệu mẫu cho biểu đồ sản phẩm bán chạy
const productData = {
    labels: ['Sofa', 'Bàn ăn', 'Giường ngủ', 'Tủ quần áo', 'Ghế'],
    datasets: [{
        label: 'Số lượng bán',
        data: [52, 35, 48, 30, 25],
        backgroundColor: [
            'rgba(255, 99, 132, 0.5)',
            'rgba(54, 162, 235, 0.5)',
            'rgba(255, 206, 86, 0.5)',
            'rgba(75, 192, 192, 0.5)',
            'rgba(153, 102, 255, 0.5)'
        ],
        borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)'
        ],
        borderWidth: 1
    }]
};

// Cấu hình và khởi tạo các biểu đồ
document.addEventListener('DOMContentLoaded', function() {
    // Biểu đồ doanh thu
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    const revenueChart = new Chart(revenueCtx, {
        type: 'line',
        data: revenueData,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
    
    // Biểu đồ khách hàng
    const customerCtx = document.getElementById('customerChart').getContext('2d');
    const customerChart = new Chart(customerCtx, {
        type: 'pie',
        data: customerData,
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });
    
    // Biểu đồ sản phẩm
    const productCtx = document.getElementById('productChart').getContext('2d');
    const productChart = new Chart(productCtx, {
        type: 'doughnut',
        data: productData,
        options: {
            responsive: true,
            maintainAspectRatio: false
        }
    });
});
</script>











